@model FerreteriaDiego.Models.Producto

@{
    ViewBag.Title = "Nuevo Producto";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">➕ Registro de Producto</h4>
        </div>

        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <!-- ID -->
                <div class="form-group row mb-3">
                    @Html.LabelFor(m => m.id_producto, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.id_producto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.id_producto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Código -->
                <div class="form-group row mb-3">
                    @Html.LabelFor(m => m.codigo, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.codigo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.codigo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Nombre -->
                <div class="form-group row mb-3">
                    @Html.LabelFor(m => m.nombre, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Descripción -->
                <div class="form-group row mb-3">
                    @Html.LabelFor(m => m.descripcion, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Precio -->
                <div class="form-group row mb-3">
                    @Html.LabelFor(m => m.precio_unitario, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.precio_unitario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.precio_unitario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- IVA -->
                <div class="form-group row mb-3">
                    @Html.LabelFor(m => m.iva_porcentaje, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.iva_porcentaje, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.iva_porcentaje, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Categoría -->
                <div class="form-group row mb-3">
                    @Html.LabelFor(m => m.categoria, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.categoria, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.categoria, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Stock -->
                <div class="form-group row mb-3">
                    @Html.LabelFor(m => m.stock, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.stock, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.stock, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Estado -->
                <div class="form-group row mb-3">
                    @Html.LabelFor(m => m.estado, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.estado, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.estado, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Fecha -->
                <div class="form-group row mb-4">
                    @Html.LabelFor(m => m.fecha_creacion, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.EditorFor(
                            m => m.fecha_creacion,
                            new { htmlAttributes = new { @class = "form-control", type = "date" } }
                        )
                        @Html.ValidationMessageFor(m => m.fecha_creacion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Botones -->
                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4">
                        💾 Guardar
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">
                        ↩ Volver
                    </a>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}