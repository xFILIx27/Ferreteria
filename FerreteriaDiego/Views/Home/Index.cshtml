@{
    ViewBag.Title = "Inicio";
}

<!-- HERO / BIENVENIDA -->
<div class="text-center mb-5">
    <h1 class="display-5 fw-bold">Ferretería </h1>
    <p class="text-muted fs-5">
        Herramientas, materiales y soluciones para tu proyecto
    </p>
    <a href="#" class="btn btn-primary btn-lg mt-3">
        Ver catálogo
    </a>
</div>

<hr />

<!-- SECCIÓN DE CATEGORÍAS -->
<h2 class="mb-4">Categorías principales</h2>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card p-4 h-100">
            <h5>🔧 Herramientas</h5>
            <p>
                Taladros, martillos, pulidoras y equipos profesionales.
            </p>
            <a href="#" class="btn btn-outline-primary mt-auto">
                Ver más
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card p-4 h-100">
            <h5>🧱 Materiales</h5>
            <p>
                Cemento, tornillería, pinturas y acabados.
            </p>
            <a href="#" class="btn btn-outline-primary mt-auto">
                Ver más
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card p-4 h-100">
            <h5>🚚 Servicios</h5>
            <p>
                Despachos, asesoría técnica y pedidos especiales.
            </p>
            <a href="#" class="btn btn-outline-primary mt-auto">
                Contáctanos
            </a>
        </div>
    </div>
</div>

<hr class="my-5" />

<!-- SECCIÓN DE PRODUCTOS DESTACADOS -->
<h2 class="mb-4">Productos destacados</h2>

<div class="row g-4">
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="card-title">Taladro Bosch</h6>
                <span class="badge bg-success mb-2">Disponible</span>
                <p class="card-text">
                    Taladro percutor 750W.
                </p>
                <h5 class="text-primary">$350.000</h5>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="#" class="btn btn-primary w-100">
                    Comprar
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="card-title">Martillo Stanley</h6>
                <span class="badge bg-warning text-dark mb-2">Pocas unidades</span>
                <p class="card-text">
                    Mango antideslizante.
                </p>
                <h5 class="text-primary">$45.000</h5>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="#" class="btn btn-primary w-100">
                    Comprar
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="card-title">Bulto de Cemento</h6>
                <span class="badge bg-success mb-2">Disponible</span>
                <p class="card-text">
                    Cemento gris 50kg.
                </p>
                <h5 class="text-primary">$38.000</h5>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a href="#" class="btn btn-primary w-100">
                    Comprar
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="card-title">Pintura Blanca</h6>
                <span class="badge bg-danger mb-2">Agotado</span>
                <p class="card-text">
                    Galón pintura interior.
                </p>
                <h5 class="text-muted">$72.000</h5>
            </div>
            <div class="card-footer bg-transparent border-0">
                <button class="btn btn-secondary w-100" disabled>
                    No disponible
                </button>
            </div>
        </div>
    </div>
</div>
